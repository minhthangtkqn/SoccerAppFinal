<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Field"
        android:id="@+id/txt_Field"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pitch_image"
        android:layout_toEndOf="@+id/pitch_image"
        android:layout_marginLeft="10dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: ..."
        android:id="@+id/txt_Price"
        android:textSize="15dp"
        android:layout_below="@+id/txt_Field"
        android:layout_toRightOf="@+id/pitch_image"
        android:layout_marginLeft="10dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Players: ..."
        android:id="@+id/txt_Max"
        android:textSize="15dp"
        android:layout_below="@+id/txt_Price"
        android:layout_toRightOf="@+id/pitch_image"
        android:layout_marginLeft="10dp"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/pitch_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txt_Date"
        android:src="@drawable/football_pitch_icon_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: ..."
        android:id="@+id/txt_Date"
        android:layout_below="@+id/txt_Max"
        android:layout_toRightOf="@+id/pitch_image"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnJoin"
        android:background="@drawable/round_plus"
        android:layout_below="@+id/txt_Field"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />
</RelativeLayout>