<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="@drawable/soccer_net_edited">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableRow4"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/bongden"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ONLINE SOCCER NETWORK"
            android:id="@+id/textView13"
            android:textAlignment="center"
            android:textColor="#bd0d0d"
            android:textSize="28dp"
            android:textStyle="bold|italic"
            android:layout_marginRight="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow4"
        android:layout_centerHorizontal="true"
        android:id="@+id/row2"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:id="@+id/textView14"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row2"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableRow6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/editUserName"
            android:drawableLeft="@drawable/user_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_text_style" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableRow7"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/textView15"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tableRow7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableRow8"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/editPassword"
            android:layout_weight="1"
            android:drawableLeft="@drawable/lock_icon"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_text_style"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnShowPassword"
            android:background="@drawable/eye_icon"
            android:layout_gravity="center_vertical" />

        <!--<ImageButton-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/btnShowPassword"-->
            <!--android:src="@drawable/eye_icon"-->
            <!--android:layout_alignTop="@+id/editPassword"-->
            <!--android:layout_alignBottom="@+id/editPassword"-->
            <!--android:layout_alignRight="@+id/editPassword"-->
            <!--android:layout_marginRight="20dp" />-->

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableRow9"
        android:layout_marginTop="20dp">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:id="@+id/rememberMe"
            android:checked="false"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableRow10"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:id="@+id/btnLogin"
            android:background="@drawable/button_shape"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="true"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow10"
        android:layout_alignRight="@+id/tableRow10"
        android:layout_alignEnd="@+id/tableRow10"
        android:id="@+id/row"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don&apos;t have an account? Create one"
            android:id="@+id/signUp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
    </TableRow>

</RelativeLayout>
