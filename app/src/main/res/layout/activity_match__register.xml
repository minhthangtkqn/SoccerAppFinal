<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tlds.testwebservice.Match_Register"
    android:background="@drawable/soccer_net_edited">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MATCH REGISTER"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="28dp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="40dp"
        android:textColor="#d10808"
        android:visibility="invisible" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableRow">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Field Name"
            android:id="@+id/textView10"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtFieldName"
            android:textSize="20dp"
            android:text="Field Name"
            android:background="@drawable/edit_text_style"
            android:textColor="#000000"
            android:layout_weight="1"
            android:paddingLeft="15dp" />

        <Spinner
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:id="@+id/spinnerFieldName"
            android:background="@drawable/edit_text_style" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tableRow"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableRow2"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Price"
            android:id="@+id/textView11"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editPrice"
            android:textSize="20dp"
            android:hint="Price"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit_text_style"
            android:textColor="#000000"
            android:paddingLeft="15dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tableRow2"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableRow3"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Max Players"
            android:id="@+id/textView12"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editMaxPlayers"
            android:textSize="20dp"
            android:hint="Maximum Players"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit_text_style"
            android:textColor="#000000"
            android:paddingLeft="15dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/tableRow3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/rowAR">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Date"
            android:id="@+id/textView6"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DATE"
            android:id="@+id/btnDate"
            android:layout_marginRight="30dp"
            android:textSize="18dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowAR"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableRow4"
        android:layout_marginTop="40dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/btnRegisterMatch"
            android:layout_marginTop="30dp"
            android:textSize="25dp"
            android:background="@drawable/button_shape"
            android:textColor="#FFFFFF" />
    </TableRow>

</RelativeLayout>
