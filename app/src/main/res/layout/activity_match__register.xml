<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tlds.testwebservice.Match_Register"
    android:background="@drawable/soccer_net_edited">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MATCH REGISTER"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="28dp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="40dp"
        android:textColor="#d10808" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableRow">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Field Name"
            android:id="@+id/textView10"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/txtFieldName"
            android:textSize="20dp"
            android:text="Field Name" />

        <Spinner
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerFieldName" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableRow2">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Price"
            android:id="@+id/textView11"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editPrice"
            android:textSize="20dp"
            android:hint="Price" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow2"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableRow3">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Max Players"
            android:id="@+id/textView12"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editMaxPlayers"
            android:textSize="20dp"
            android:hint="Maximum Players" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow3"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableRow4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/btnRegisterMatch"
            android:layout_marginTop="30dp"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:background="#3691e6" />
    </TableRow>
</RelativeLayout>
